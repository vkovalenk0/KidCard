<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_find_letter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kovalenkovolodymyr.kidcard.GameFindLetterActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Space
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="125dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background2"
        android:scaleType="centerCrop"
        android:id="@+id/imageView" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/card_margin"
        android:id="@+id/llCurElements"
        android:layout_below="@id/spacer"
        >
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/card_size"
            android:layout_height="@dimen/card_size"
            android:id="@+id/cvCurrentLetter"
            android:layout_margin="@dimen/card_margin"
            app:cardElevation="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/card_text_size"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/card_size"
            android:layout_height="@dimen/card_size"
            android:id="@+id/cvCurrentImage"
            android:layout_margin="@dimen/card_margin"
            app:cardElevation="10dp"
            >
            <com.kovalenkovolodymyr.kidcard.CardView
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                android:padding="@dimen/card_margin" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TableLayout
        android:padding="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tlGame2"
        android:layout_below="@+id/llCurElements"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"

                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="6dp"
                android:layout_width="@dimen/card_size"
                android:layout_height="@dimen/card_size"
                app:cardElevation="10dp"
                android:padding="@dimen/card_margin"></android.support.v7.widget.CardView>
        </TableRow>
    </TableLayout>

</RelativeLayout>
